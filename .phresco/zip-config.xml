<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<assembly>
    <baseDirectory>${project.build.finalName}</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>do_not_checkin/target/classes</directory>
            <outputDirectory>/WEB-INF/classes</outputDirectory>
             <excludes>
                <exclude>/js/**</exclude>
                <exclude>/resources/**</exclude>
                <exclude>/css/**</exclude>
                <exclude>/images/**</exclude>
                <exclude>*.html</exclude>
                <exclude>*.jsp</exclude>
            </excludes>
        </fileSet>
		 <fileSet>
            <directory>do_not_checkin/target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>/js/**</include>
                <include>/resources/**</include>
                <include>/css/**</include>
                <include>/images/**</include>
                <include>*.html</include>
                <include>*.jsp</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/do_not_checkin/target/jstest/overlays</directory>
            <outputDirectory>/js</outputDirectory>
            <includes>
                <include>/jslibraries/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/do_not_checkin/target/jstest/overlays/net.awired.js</directory>
            <outputDirectory>/js</outputDirectory>
            <includes>
                <include>/almond/*.js</include>
            </includes>
        </fileSet>
        <fileSet id="excludeFile">
            <directory>src/main/webapp</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>/js/**/*-min.js</exclude>
                <exclude>/js/**/*.min.js</exclude>
                <exclude>/css/**/*-min.css</exclude>
                <exclude>/css/**/*.min.css</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>do_not_checkin/target</directory>
            <outputDirectory>/WEB-INF</outputDirectory>
            <includes>
                <include>/lib/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/WEB-INF/classes</outputDirectory>
            <excludes>
                <exclude>/js/**</exclude>
                <exclude>/resources/**</exclude>
                <exclude>/css/**</exclude>
                <exclude>*.html</exclude>
                <exclude>*.jsp</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/resources</outputDirectory>
            <excludes>
                <exclude>/js/**</exclude>
                <exclude>/resources/**</exclude>
                <exclude>/css/**</exclude>
                <exclude>*.html</exclude>
                <exclude>*.jsp</exclude>
            </excludes>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet id="includeLibJs">
            <directory>src/main/webapp</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>/js/**/lib/**/*-min.js</include>
                <include>/js/**/lib/**/*.min.js</include>
                <include>/js/**/libs/**/*-min.js</include>
                <include>/js/**/libs/**/*.min.js</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
